@model IEnumerable<AdminBlog.Models.Blog>
@{
    ViewData["Title"] = "Post Listesi";
}
<div class="container">
    <a class="btn btn-primary" asp-area="" asp-controller="Blog" asp-action="Blog">Post Ekle</a>
</div>
<div class="container mt-2">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Adı</th>
                <th scope="col"></th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>
                        @if (item.IsPublish)
                        {
                            <a class="btn text-light btn-success active">Yayında</a>
                        }
                        else
                        {
                            <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="IsPublish">Yayınla</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>