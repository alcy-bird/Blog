@model IEnumerable<AdminBlog.Models.Author>
@{
    ViewData["Title"] = "Yazar";
}
<div class="container">
    <button type="button" onclick="$('#AuthorModal').modal('show')" class="btn btn-primary">Kategori Ekle</button>
</div>
<div class="container mt-2">
    @*Kullanýcý listesi*@
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ad</th>
                <th scope="col">Soyad</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Parola</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.Password</td>
                    <td><a class="btn btn-danger" asp-route-id="@item.Id" asp-action="DeleteAuthor">X</a></td>
                    <td>
                        <button class="btn btn-secondary" onclick="updateForm(@item.Id)" type="button">Güncelle</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @*Kullanýcý Ekleme modalý*@

    <div class="modal" id="AuthorModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kullanýcý Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="~/Home/AddAuthor" method="post" autocomplete="off">
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="Id" name="AuthorId" />
                            <input type="text" name="name" id="Name" placeholder="Adýnýz" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="surname" id="Surname" placeholder="Soyadýnýz" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="mail" id="Mail" placeholder="E-Mailiniz" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="password" id="Password" placeholder="Þifreniz" class="form-control" />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" id="saveBtn" class="btn btn-primary">Ekle</button>
                        <button type="submit" id="updateBtn" class="btn btn-primary">Güncelle</button>
                        <button type="button" class="btn btn-secondary" onclick="clearform()" data-dismiss="modal">Kapat</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(() => clearform());
        function updateForm(Id) {
            fetch("//Home//AuthorDetails?Id=" + Id)
                .then(res => res.json())
                .then(res => {
                    $("#Id").val(res.Id);
                    $('#Name').val(res.name);
                    $('#Surname').val(res.surname);
                    $('#Mail').val(res.mail);
                    $('#Password').val(res.password);
                });
            $('#saveBtn').hide();
            $('#updateBtn').show();
            $('#AuthorModal').modal('show');
        }
        function clearform() {
            $('#Id').val(null);
            $('#Name').val(null);
            $('#Surname').val(null);
            $('#Mail').val(null);
            $('#Password').val(null);
            $('#saveBtn').show();
            $('#updateBtn').hide();
        }
    </script>
}
